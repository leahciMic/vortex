{
  "compilerOptions": {
    "outDir": "build/typescript",
    "module": "esnext",
    "target": "es2017",
    "lib": ["es6", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
